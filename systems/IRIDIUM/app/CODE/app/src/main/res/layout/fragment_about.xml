<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    tools:openDrawer="start"
    tools:context=".AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/first1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/header_font_size"
        android:textColor="@color/home_content1_color"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/home_content_spacing"
        android:text="@string/about_first_statement" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/home_content_spacing"
        android:orientation="vertical">

     <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/second1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_font_size"
            android:paddingLeft="@dimen/home_content_spacing"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:textColor="@color/home_content1_color"
            android:text="@string/about_second_statement" />

    </LinearLayout>

</LinearLayout>

</ScrollView>