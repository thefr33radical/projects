<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    tools:openDrawer="start"
    tools:context=".AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/header_font_size"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/header_font_size"
            android:text="@string/home_app_bbk_acc"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/bank_acc_user_name_layout"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/purchase_padding"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/bank_acc_user_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="text"
                android:hint="@string/bank_acc_user_name"
                android:textColorHighlight="#fff"
                android:textColorHint="#fff" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/bank_acc_user_password_layout"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/purchase_padding"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/bank_acc_user_password_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="textPassword"
                android:hint="@string/prompt_password"
                android:textColorHighlight="#fff"
                android:textColorHint="#fff" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/purchase_bank" />

        <Spinner
            android:id="@+id/credit_card_bank_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/bank_acc_branch_layout"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/purchase_padding"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/bank_acc_branch_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="text"
                android:hint="@string/bank_acc_branch"
                android:textColorHighlight="#fff"
                android:textColorHint="#fff" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/bank_acc_branch_city_layout"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/purchase_padding"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/bank_acc_branch_city_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="phone"
                android:hint="@string/bank_acc_city"
                android:textColorHighlight="#fff"
                android:textColorHint="#fff" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/bank_acc_branch_pincode_layout"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/purchase_padding"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/bank_acc_branch_pincode_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="phone"
                android:hint="@string/bank_acc_pincode"
                android:textColorHighlight="#fff"
                android:textColorHint="#fff" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/bank_acc_branch_state_layout"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/purchase_padding"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/bank_acc_branch_state_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="phone"
                android:hint="@string/bank_acc_state"
                android:textColorHighlight="#fff"
                android:textColorHint="#fff" />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/bank_acc_branch_balance_layout"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/purchase_padding"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/bank_acc_branch_balance_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="phone"
                android:hint="@string/bank_acc_balance"
                android:textColorHighlight="#fff"
                android:textColorHint="#fff" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/bank_acc_register_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:text="@string/bank_acc_register"/>

    </LinearLayout>

</ScrollView>